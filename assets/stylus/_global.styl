// ----------
// Global
// ----------

html, body, #__nuxt {
  height 100%
}

a {
  color inherit
  text-decoration none
}

img, svg {
  display block
  height auto
  max-width 100%
}

h1, h2, h3, h4, h5 {
  font-weight normal
}

ul, ol {
  list-style none
  margin 0
  padding 0
}

input, button, textarea, select {
  appearance none
  background 0
  border 0
  color inherit
  padding 0
  margin 0
  font inherit
  outline 0
}

textarea {
  resize vertical
}